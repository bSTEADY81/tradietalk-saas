
{
  "buildCommand": "cd app && yarn build",
  "outputDirectory": "app/.next",
  "installCommand": "cd app && yarn install",
  "framework": "nextjs",
  "functions": {
    "app/app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/app/$1"
    }
  ]
}
